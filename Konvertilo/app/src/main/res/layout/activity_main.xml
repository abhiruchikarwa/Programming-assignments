<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIT CONVERTER"
            android:textColor="#000000"
            android:textSize="35dp"
            android:id="@+id/faltu"
            android:textAlignment="inherit"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/len"
        android:background="@drawable/round"
        android:layout_below="@+id/faltu"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:padding="7dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Length"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@id/imageButton"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"/>

        <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/wgt"
        android:background="@drawable/round"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mass"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"/>

       <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/temo"
        android:background="@drawable/round"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperature"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp"/>

        <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/cur"
        android:background="@drawable/round"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Currency"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"/>

        <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/storage"
        android:background="@drawable/round"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Storage"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton6"
            android:src="@drawable/vol"
            android:background="@drawable/round"
            android:layout_below="@+id/imageButton5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Volume"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignTop="@+id/imageButton6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/vel"
            android:background="@drawable/round"
            android:layout_below="@+id/imageButton6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Velocity"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/imageButton7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please click on the buttons"
        android:id="@+id/faltu2"
        android:layout_below="@+id/faltu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


    </RelativeLayout>
</ScrollView>